pipeline{
  agent any
    stages{
      stage("build"){
        steps{
          echo "building an application..."
          sudo apt-get apache2 install
        }
      }
      stage("test"){
        steps{
          echo "testing an application..."
        }
      }
      stage("deploy"){
        steps{
          echo "deploying an application..."
        }
      }
    }
}
